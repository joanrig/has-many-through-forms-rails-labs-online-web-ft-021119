<h2>Create a new post</h2>
<%= form_for @post do |f| %>
  <h3><%= f.label "Title" %></h3>
  <%= f.text_field :title %>
  <h3><%= f.label "Content" %></h3>
  <%= f.text_area :content %>

  <h3><%= f.label "Pick a Category" %></h3>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %><br>
<h3><%= f.label "Or, create a new category" %></h3>
    <%= categories_fields.text_field :name %>
    <%= f.submit %>
  <% end %>
<% end %>
